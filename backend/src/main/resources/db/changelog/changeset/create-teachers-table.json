{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "create-teachers-table",
        "author": "Nikita Lepikhin",
        "changes": [
          {
            "createTable": {
              "tableName": "teachers",
              "columns": [
                {
                  "column": {
                    "name": "user_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_user_id",
                      "references": "users(id)",
                      "nullable": false,
                      "primaryKey": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "name",
                    "type": "varchar(128)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "bio",
                    "type": "varchar(1024)",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "verified",
                    "type": "boolean",
                    "constraints": {
                      "nullable": false
                    },
                    "defaultValueBoolean": false
                  }
                },
                {
                  "column": {
                    "name": "school_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_school_id",
                      "references": "schools(id)",
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "department_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_department_id",
                      "references": "departments(id)",
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "name_modified",
                    "type": "timestamp",
                    "defaultValueComputed": "CURRENT_TIMESTAMP()",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "bio_modified",
                    "type": "timestamp",
                    "defaultValueComputed": "CURRENT_TIMESTAMP()",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "school_modified",
                    "type": "timestamp",
                    "defaultValueComputed": "CURRENT_TIMESTAMP()",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "department_modified",
                    "type": "timestamp",
                    "defaultValueComputed": "CURRENT_TIMESTAMP()",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
