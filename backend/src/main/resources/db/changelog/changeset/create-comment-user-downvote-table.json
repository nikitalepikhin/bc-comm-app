{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "create-comment-user-downvote-table",
        "author": "Nikita Lepikhin",
        "changes": [
          {
            "createTable": {
              "tableName": "comment_user_downvote",
              "columns": [
                {
                  "column": {
                    "name": "user_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_user_id",
                      "references": "users(id)",
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "comment_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_comment_id",
                      "references": "comments(id)",
                      "nullable": false
                    }
                  }
                }
              ]
            }
          },
          {
            "addPrimaryKey": {
              "columnNames": "user_id, comment_id",
              "constraintName": "pk_comment_user_downvote",
              "tableName": "comment_user_downvote"
            }
          }
        ]
      }
    }
  ]
}
