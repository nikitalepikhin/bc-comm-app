{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "create-comments-table",
        "author": "Nikita Lepikhin",
        "changes": [
          {
            "createTable": {
              "tableName": "comments",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "bigint",
                    "autoIncrement": true,
                    "constraints": {
                      "primaryKey": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "uuid",
                    "type": "uuid",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "post_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_post_id",
                      "references": "posts(id)",
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "author_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_author_id",
                      "references": "users(id)",
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "parent_comment_id",
                    "type": "bigint",
                    "constraints": {
                      "foreignKeyName": "fk_parent_comment_id",
                      "references": "comments(id)",
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "body",
                    "type": "varchar(10000)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "created",
                    "type": "timestamp",
                    "defaultValueComputed": "CURRENT_TIMESTAMP()",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "modified",
                    "type": "timestamp",
                    "defaultValueComputed": "CURRENT_TIMESTAMP()",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "upvote_count",
                    "type": "int",
                    "defaultValue": "0",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "downvote_count",
                    "type": "int",
                    "defaultValue": "0",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
